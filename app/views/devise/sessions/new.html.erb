<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="w-1/2 max-w-md bg-white p-8 rounded-lg shadow-lg">
    <h2 class="text-2xl font-bold text-center text-gray-700 mb-6">Iniciar Sesi贸n</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>

      <!-- Email -->
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Password -->
      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", 
              class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Remember Me -->
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 border-gray-300 rounded" %>
          <%= f.label :remember_me, class: "ml-2 text-sm text-gray-600" %>
        </div>
      <% end %>

      <!-- Bot贸n de Login -->
      <div>
        <%= f.submit "Iniciar Sesi贸n", 
              class: "w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition duration-300" %>
      </div>

    <% end %>

    <!-- Enlaces de recuperaci贸n y registro -->
    <div class="text-center mt-4 text-sm text-gray-500">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
