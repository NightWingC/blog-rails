<%= form_with( model: @article, local: true ) do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>

    <div>
        <%= form.label :content %>
        <%= form.rich_text_area :content %>
    </div>

    <div class="bg-green hover:bg-amber-200">
        <%= form.submit "Guardar" %>
    </div>
<% end %>